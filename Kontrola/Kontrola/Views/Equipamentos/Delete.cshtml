@model Kontrola.Models.Equipamento

@{
	ViewData["Title"] = "Delete";
}

<h1>Deletar equipamento</h1>
<hr />

<div class="d-flex justify-content-center mt-5">


	<dl class="row g-3 w-75 mt-3 border border-primary shadow-lg p-3 mb-5 bg-body-tertiary rounded">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Marca)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Marca)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Modelo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Modelo)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.NumeroSerie)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.NumeroSerie)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Potencia)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Potencia)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Cliente)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Cliente.Cnpj)
		</dd>
		<form asp-action="Delete">
			<input type="hidden" asp-for="EquipamentoId" />
			<button type="button" value="Delete" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Deletar</button>
			<div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog  ">
					<div class="modal-content w-100 ">
						<div class="modal-header">
							<h1 class="modal-title  " id="exampleModalLabel">Deletar cliente</h1>
						</div>
						<div class="modal-body">
							<spam class="fw-bolder danger-text-emphasis">Tem certeza que você quer deletar esse cliente?</spam>
						</div>
						<div class="modal-footer ">							
							<button type="submit" value="Delete" class="btn btn-danger">Confirmar</button>
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
						</div>
					</div>
				</div>
			</div>
			<a class="btn btn-primary" asp-action="Index">Cancelar</a>
		</form>
	</dl>


</div>

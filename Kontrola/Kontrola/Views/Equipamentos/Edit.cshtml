@model Kontrola.Models.Equipamento
@{
    ViewData["Title"] = "Edit";
}
<h1>Editar equipamento</h1>
<hr />
<div class="">
    <div class=" d-flex justify-content-center">
        <form class="row g-3 w-75 mt-3 border border-primary shadow-lg p-3 mb-5 bg-body-tertiary rounded" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EquipamentoId" />
            <div class="col-md-6">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="NumeroSerie" class="control-label">Numero de Serie</label>
                <input asp-for="NumeroSerie" class="form-control" />
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Potencia" class="control-label">Potência</label>
                <input asp-for="Potencia" class="form-control" />
                <span asp-validation-for="Potencia" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TensaoEntrada" class="control-label">Tensão de entrada</label>
                <input asp-for="TensaoEntrada" class="form-control" />
                <span asp-validation-for="TensaoEntrada" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TensaoSaida" class="control-label">Tensão de saida</label>
                <input asp-for="TensaoSaida" class="form-control" />
                <span asp-validation-for="TensaoSaida" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Tipo" class="control-label">Tipo de equipamento</label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" value="Criar" class="btn btn-success">Confirmar</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>